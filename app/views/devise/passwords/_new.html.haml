-#= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
  = devise_error_messages!
  %h5 Indícanos tu correo electrónico para recuperar la contraseña
  .form-label-group
    = f.email_field :email, :autofocus => true, class: "validate #{'invalid' unless resource.errors.messages.empty?} form-control", label: false, :placeholder => "E-mail"
  .box-login-btn
    = f.submit 'Recuperar Cuenta', :class => 'btn btn-lg btn-primary btn-block btn-login'

