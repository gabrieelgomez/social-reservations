.authform
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3 Sign up
    = devise_error_messages!

    .form-group
      = f.input :name, :autofocus => true, class: 'form-control'
    .form-group
      -# = f.hidden_field :roles, value: 4
      -# - roles = Role.where.not(name: 'keppler_admin').map { |rol| [rol.name.humanize, rol.id] }
      -# = f.input :roles, collection: roles, label: t('keppler.actions.select_rol'), include_blank: t('simple_form.labels.defaults.select_role')
    .form-group
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control'
    .form-group
      = f.label :password
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, class: 'form-control'
    = f.submit 'Sign up', :class => 'button right'
