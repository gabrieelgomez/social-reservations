-#conditioned snippet - variable in the controller
.container-fluid
  .row
    - if current_user.reservations_where('multidestination').blank?
      .col-12
        .empty-states
          .col-12
            %center
              .image-ico
                %img{:alt => "", :src => "/assets/img/orders.svg", :class => "img-responsive"}/
              -#%i.icon-directions.icons
          .col-12
            .error
              %center
                %p ¡Lo sentimos!
                %p No hemos encontrado órdenes de multidestinos.
    - else
      .col-12
        .card
          .card-header
            %h4.card-title Órdenes de Multidestinos
          .card-body
            .row
              .col-12.col-xl-4
            .table-responsive
              %table.table.table-hover.table-striped
                %thead
                  %th N° Orden
                  %th N° Factura
                  %th Costo Cotización
                  %th Estatus Reserva
                  %th Estatus Pago
                  %th Multidestino
                  %th Fecha
                  %th Detalles
                %tbody
                  - current_user.reservations_where('multidestination').reverse.each do |reservation|
                    %tr
                      %td= reservation.id
                      %td= reservation.invoice.token
                      - if reservation.invoice.amount.to_f.zero?
                        %td Por cotizar
                      - else
                        %td= number_to_currency(reservation.invoice.amount, locale: @locale)
                      %td
                        %span.badge.badge-pill{class: reservation.order.status_class?}= t("keppler.messages.#{reservation.order.status}").capitalize
                      %td
                        - if reservation.invoice.amount.to_f.zero?
                          %span.badge.badge-info Por Cotizar
                        - elsif reservation.order.status_pay? :pending
                          %span.badge.badge-warning Pendiente
                        - elsif reservation.order.status_pay? :cancelled
                          %span.badge.badge-danger Cancelado
                        - else
                          %span.badge.badge-success Aprobado
                      %td= reservation.origin.truncate(20)
                      %td= reservation.flight_origin
                      %td
                        %a{href: order_details_path(@lang, @currency, params[:module], reservation.id)}
                          %button.btn.btn-primary.btn-xs{:type => "button"}
                            %span
                              %i.icon-credit-card.icons
                            Detalles
