.container-fluid
  = simple_form_for @user, url: create_agent_path, method: :post do |f|
    .row
      .col-md-8
        .card
          .card-header
            %h4.card-title.text-capitalize= t('receptivo.dashboard.messages.new_agent')
          .card-body
            .row
              .col-md-6
                .form-group
                  %label.control-label= t('receptivo.dashboard.table.name')
                  = f.input :name, :autofocus => true, class: '', label: false
              .col-md-6
                .form-group
                  %label.control-label DNI
                  = f.input :dni, :autofocus => true, class: '', label: false
            .row
              .col-md-6
                .form-group
                  %label.control-label= t('receptivo.dashboard.table.email')
                  = f.input :email, :autofocus => true, class: '', label: false
              .col-md-6
                .form-group
                  %label.control-label= t('receptivo.dashboard.table.phone')
                  = f.input :phone, :autofocus => true, class: '', label: false
            .text-center
              %button.btn.btn-info.btn-fill.float-right{:type => ""}= t('receptivo.dashboard.messages.save')
            .clearfix
      .col-md-4
        .row
          .col-md-12
            %center
            = f.input :avatar, as: :keppler_file, label: false

= render 'app/dashboard/dashboard/layouts/scripts'

:scss
  .help-block{
    font-size: 10px;
    margin-bottom: 5px;
    text-transform: uppercase;
    color: #9A9A9A;
  }
