!!!
%html{:lang => "en"}
  %head
    = render 'app/dashboard/dashboard/layouts/head'
    -#= render 'app/layouts/head'
  %body
    -#.loader
      = render 'app/front/loader/loader'
    %div#js-mobile
      .notifications
        %span{:mode => "in-out"}
      .wrapper
        .sidebar{style: "background-image: url(/assets/img/sidebar_dashboard.png)"}
          = render 'app/dashboard/dashboard/layouts/sidebar'
        .main-panel
          = render 'app/dashboard/dashboard/layouts/main'
          .content
            = render "app/dashboard/dashboard/#{params[:module]}/show"

    = render 'app/dashboard/dashboard/layouts/scripts'


-#!!!
-#%html.no-js{:lang => "en"}
  %head
    = render 'app/layouts/head'
    %link{:href => "/assets/css/dashboard.css", :rel => "stylesheet"}/
    %link{:href => "/assets/css/dashboard-skin.css", :rel => "stylesheet"}/
  %body.hold-transition.skin-blue.sidebar-mini.fixed
    .loader
      = render 'app/front/loader/loader'
    .wrapper
      %header.main-header
        = render 'app/dashboard/dashboard/layouts/header'
      %aside.main-sidebar
        = render 'app/dashboard/dashboard/layouts/aside'
      .content-wrapper
        = render "app/dashboard/dashboard/#{params[:module]}/show"

    %script{:src => "/assets/js/loader.js"}
    %script{:src => "/assets/js/navbar.js"}
    %script{:src => "/assets/js/dashboard.min.js"}
    %script{:src => "/assets/app/googlefontAsync.js"}


