.container-fluid
  .row
    - if current_user.reservations_where('circuit').blank?
      .col-12
        .empty-states
          .col-12
            %center
              .image-ico
                %img{:alt => "", :src => "/assets/img/orders.svg", :class => "img-responsive"}/
          .col-12
            .error
              %center
                %p ¡Lo sentimos!
                %p No hemos encontrado órdenes de circuitos.
    - else
      .col-12
        .card
          .card-header
            %h4.card-title Órdenes de Circuitos
          .card-body
            .table-responsive
              %table.table.table-hover.table-striped
                %thead
                  %th Orden
                  %th Factura
                  %th Monto
                  %th Cotizante
                  %th Estatus
                  %th Detalles
                %tbody
                  - current_user.reservations_where('circuit').reverse.each do |reservation|
                    %tr
                      %td= reservation.id
                      %td= reservation.invoice.token
                      - if reservation.invoice.amount.nil?
                        %td Por cotizar
                      - else
                        %td= number_to_currency(reservation.invoice.amount, locale: @locale)
                      %td= reservation.travellers.first.name.titleize
                      %td
                        %span.badge.badge-pill{class: reservation.order.status_class?}= t("keppler.messages.#{reservation.order.status}").capitalize
                      %td
                        %a{href: order_details_path(@lang, @currency, params[:module], reservation.id)}
                          %button.btn.btn-primary.btn-xs{:type => "button"}
                            %span
                              %i.icon-credit-card.icons
                            Detalles
