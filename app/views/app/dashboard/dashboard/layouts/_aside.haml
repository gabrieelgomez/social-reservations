
%section.sidebar
  .user-panel
    .pull-left.image
      %img.user-image{alt: "", src: current_user.avatar.url.nil? ? "/assets/img/user.png" : current_user.avatar.url}
    .pull-left.info
      %p= current_user.name
      %a{href: "#"}
        %i.fa.fa-circle.text-success
        Online
  %form.sidebar-form{action: "#", method: "get"}
    .input-group
      %input.form-control{name: "q", placeholder: "Buscar...", type: "text"}/
      %span.input-group-btn
        %button#search-btn.btn.btn-flat{name: "search", type: "submit"}
          %i.fa.fa-search
  / Sidebar Menu
  %ul.sidebar-menu{"data-widget"=>"tree"}
    %li.header Consultas
    %li.treeview
      %a{href: "#"}
        %i.icon-docs.icons
        %span Órdenes
        %span.pull-right-container
          %i.fa.fa-angle-left.pull-right
      %ul.treeview-menu
        %li
          = link_to orders_path(@lang, @currency, 'circuits'), class:"" do
            Circuitos
        %li
          = link_to orders_path(@lang, @currency, 'multidestinations'), class:"" do
            Multidestinos
        %li
          = link_to orders_path(@lang, @currency, 'transfers'), class:"" do
            Traslados / Vehículos
        %li
          = link_to orders_path(@lang, @currency, 'tours'), class:"" do
            Tours
    %li.treeview
      %a{href: "#"}
        %i.icon-user.icons
        %span Mi Perfil
        %span.pull-right-container
          %i.fa.fa-angle-left.pull-right
      %ul.treeview-menu
        %li
          %a{href: users_details_path(@lang, @currency)} Editar perfil
