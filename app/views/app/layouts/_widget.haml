:javascript
  validateForm('#search-input');
  $('#date-input').addClass('hidden-input');
  $( '.micheckbox' ).on( 'click', function() {
      if( $('#radio2').is(':checked') ){
          $('#date-input').removeClass('hidden-input');
          $('#date-input').addClass('show-input');
      } else {
          $('#date-input').removeClass('show-input');
          $('#date-input').addClass('hidden-input');
      }
  });