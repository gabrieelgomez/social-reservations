  $( '.radio-fecha-vuelos' ).on( 'click', function() {
      if( $('#solo_ida').is(':checked') ){
          $('#round_trip').val(true);
          $('#vuelo_vuelta').addClass('hidden-input');

      } else {
        $('#vuelo_vuelta').removeClass('hidden-input');
        $('#vuelo_vuelta').addClass('show-input');
      }
  });


  $( function() {
    function populateEndDate() {
      var date2 = $('#flight_origin_picker').datepicker('getDate');
      date2.setDate(date2.getDate() + 1);
      $('#flight_arrival_picker').datepicker('setDate', date2);
      $("#flight_arrival_picker").datepicker("option", "minDate", date2);
    }

    $("#flight_origin_picker").datepicker({
      dateFormat: "dd-mm-yy",
      minDate: 1,
      onSelect: function(date) {
        populateEndDate();
        var date = $('#flight_origin_picker').val()
        $('#reservation_flight_origin').val(date);
      }
    }).datepicker("setDate", new Date());
    $('#flight_arrival_picker').datepicker({
      dateFormat: "dd-mm-yy",
      minDate: 2,
      onClose: function() {
        var dt1 = $('#flight_origin_picker').datepicker('getDate');
        var dt2 = $('#flight_arrival_picker').datepicker('getDate');
        if (dt2 <= dt1) {
          var minDate = $('#flight_arrival_picker').datepicker('option', 'minDate');
          $('#flight_arrival_picker').datepicker('setDate', minDate);
        }
        var date = $('#flight_arrival_picker').val()
        $('#reservation_flight_arrival').val(date);
      }
    }).datepicker("setDate", new Date());
  } );
