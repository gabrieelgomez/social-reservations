#modalCancellations.modal.fade{:role => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} ×
        %h4.modal-title Política de Cancelaciones
      .modal-body
        %p= @setting.try("cancellations_#{@lang}".to_sym).try(:html_safe)
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
