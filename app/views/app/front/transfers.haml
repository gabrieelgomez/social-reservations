!!!
%html.no-js{:lang => "en"}
  %head
    = render 'app/layouts/head'

  %body{style:"padding-top:120px;"}
    %header
      = render 'app/layouts/navbar'

    -#%section#home.about-us
      %video#my-video.myvideo{:autoplay => "true", :loop => "true", :muted => "true"}
        %source{:src => "/assets/img/video.mp4", :type => "video/mp4"}

    -#%section.travel-box
      .container
        .row
          .col-lg-1
          .col-lg-10
            = render 'app/layouts/widget'
    = render 'app/front/transfers/listing_transfer'

    %footer.footer-copyright
      = render 'app/layouts/footer'
    -#%script{:src => "/assets/js/navbar.js"}

    -#:javascript
      $(document).ready(function(){
        document.getElementById("my-video").play();
        $('[data-toggle="datepicker"]').datepicker();
        $('#destinations-box-one').selectize({});
        $('#destinations-box-two').selectize({});
      });
    :javascript
      $('.navigation-front').removeClass('background-hide');
      $('.navigation-front').addClass('background-show');
