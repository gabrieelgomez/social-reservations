-#%section#seach-widget
  .container
    .box-search
      .container
        .row
          .col-lg-9
            %p.result
              %span
                Su búsqueda:
              %span
                -#="#{params[:org_name]}"
              %span
                -#= " > #{params[:arr_name]}"
          .col-lg-3
            %p
              %span
                -#%i.icon.icon-magnifier
                %a.pull-right.link-widget
