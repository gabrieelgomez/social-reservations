.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong Descripción
      .panel-body
        .table-responsive
          %table.table.table-condensed
            %thead
              %tr
                %td.text-center
                  %strong Concepto
                %td.text-center
                  %strong Precio
                %td.text-center
                  %strong Cantidad
                %td.text-center
                  %strong Total
            %tbody
              %tr
                %td.text-center= @reservationable['title'][@lang]
                %td.text-center= number_to_currency(@reservationable.set_price_destination(@locality, @currency).to_f, locale: @locale)
                %td.text-center= @multiple
                %td.text-center= number_to_currency(@price_total, locale: @locale)

- if current_user.has_role? :agency

  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %strong Porcentajes de Agencia
        .panel-body
          .table-responsive
            %table.table.table-condensed
              %thead
                %tr
                  %td.text-center
                    %strong Concepto
                  %td.text-center
                    %strong Valor
                  %td.text-center
                    %strong Subtotal
                  %td.text-center
                    %strong Total
              %tbody
                %tr
                  %td.text-center Comisión
                  %td.text-center= "#{@comission} %"
                  %td.text-center= number_to_currency(@price_comission, locale: @locale)
                  %td.text-center -----

                %tr
                  %td.text-center Prestación
                  %td.text-center= "#{@lending} %"
                  %td.text-center= number_to_currency(@price_lending, locale: @locale)
                  %td.text-center -----

                %tr
                  %td.text-center Total PAX
                  %td.text-center -----
                  %td.text-center -----
                  %td.text-center= number_to_currency(@price_total, locale: @locale)

                %tr
                  %td.text-center Total Agencia
                  %td.text-center -----
                  %td.text-center -----
                  %td.text-center= number_to_currency(@price_total_agency, locale: @locale)



