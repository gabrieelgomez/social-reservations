%section.invoice-transfers#invoice-transfers
  .container
    .gallary-header.text-center
      %h2
        Facturación
      %p
        Recuerde verificar la información antes de pagar su reserva
    .container
      .row
        .col-lg-2
        .col-lg-8
          .invoice-transfers__box
            = simple_form_for KepplerTravel::Reservation.new, url: '/create_reservation_tour', method: :post do |f|
              .row
                .col-xs-12
                  .row
                    .col-lg-2
                      %img{:alt => "", :src => "/assets/img/isotipo-receptivo-colombia-invoice.svg", :width => "60px"}/
                    .col-lg-6

                      %h2 Receptivo Colombia
                      %p Operador turístico - Bogotá, Colombia
                    .col-lg-4
                      %h3.pull-right N° de Factura
                      %h3.pull-right= @invoice['token']
                  %hr/
                  .row
                    .col-xs-12
                      %address
                        -# dates billing
                        %strong Datos Personales
                        %br/
                        = @user['name']
                        %br/
                        = @user['dni']
                        %br/
                        = @user['phone']
                        %br/
                        = @user['email']
                        %br/
                        = @invoice['address']
                  .row
                    .col-xs-6
                      %address
                        %strong Método de Pago
                        %br/
                        Pĺataforma: EnLineaPagos
                        %br/
                        = @user['name']
                        %br/
                        = @user['email']
                    .col-xs-6.text-right
                      %address
                        %strong N°. Factura
                        %br/
                        = @invoice['token']
                        %br/
                        %br/
                  .row
                    .col-xs-12
                      %h5.text-center Información del Tour
                      %br/
                    .col-xs-4
                      %address
                        %strong Tour
                        %br/
                        = @reservation['origin']
                        %br/
                    .col-xs-4
                    .col-xs-4
                      %address
                        %strong Fecha/Hora de Ida
                        %br/
                        = @reservation['flight_origin']
                        %br/
                  .row
                    .col-md-12
                      .panel.panel-default
                        .panel-heading
                          %h3.panel-title
                            %strong Descripción
                        .panel-body
                          .table-responsive
                            %table.table.table-condensed
                              %thead
                                %tr
                                  %td
                                    %strong Concepto
                                  %td.text-center
                                    %strong Precio
                                  %td.text-center
                                    %strong Cantidad
                                  %td.text-right
                                    %strong Total
                              %tbody
                                %tr
                                  %td= @reservationable['title'][@lang]
                                  %td.text-center= 10
                                  %td.text-center= 1
                                  %td.text-right= 10
                  .row
                    .col-lg-12
                      .invoice-transfers__box--payment
                        %input#button.about-view.travel-btn{:name => "button", :type => "submit", :value => "Pagar Reserva"}/
