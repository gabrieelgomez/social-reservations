          %label{:for => "inputPassword"} Password
          %input#inputPassword.form-control{:placeholder => "Password", :required => "", :type => "password"}/
        .form-label-group
          %label{:for => "inputPassword"} Re-type Password
          %input#inputPassword.form-control{:placeholder => "Password", :required => "", :type => "password"}/
        %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Register Now
