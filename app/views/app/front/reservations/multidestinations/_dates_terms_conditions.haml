%h3= t('receptivo.reservation_multidestinations.title_terms_and_conditions')
.row
  .col-lg-12
    .separator__mobile.hidden-lg
    .form-group.form-custom
      .checkbox.checkbox-blue.checkbox-inline
        %input#terms_conditions.styled{name: 'terms_conditions', :type => "checkbox", :value => "agree"}/
        %label.check{:for => "terms_conditions"} 
          = t('receptivo.reservation_multidestinations.i_agree')
          = succeed "." do
            = link_to t('receptivo.reservation_multidestinations.terms_and_conditions') , '#' , :class => '', :id => 'js_termsConditions', :type => 'button'