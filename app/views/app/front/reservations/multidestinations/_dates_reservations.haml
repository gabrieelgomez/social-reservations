%h3 Datos de Reserva
.row
  .col-lg-3
    .form-group.form-custom
      %label{for: "name"} Nombre del Cotizante
      %input.form-control.custom_input{name: 'travellers[][name]', type: "text", placeholder: "Ingrese nombre"}/
  .col-lg-3
    .form-group.form-custom
      %label{:for => "origin_multidestination_booking"} Circuito
      %input{name: 'reservation[origin]', value: @multidestination.title[@lang].titleize, type: 'hidden'}
      %input.google-input.form-control.custom_input{disabled: 'disabled', value: @multidestination.title[@lang].titleize}
  .col-lg-2
    // Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
    .form-group.form-custom#fecha_origen_ida
      %label{:for => ""}  Fecha Viaje
      %input{name: 'reservation[flight_origin]', value: @flight_origin_multidestination_picker, type: 'hidden'}
      %input.form-control.custom-input.custom_input{name: 'flight_origin_multidestination_picker', id: 'flight_origin_multidestination_picker', autocomplete: 'off', disabled: 'disabled', value: @flight_origin_multidestination_picker}/
    // End -- Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
  .col-lg-2
    .form-group.form-custom
      %label{:for => "adults"} N° Adultos
      %input{name: 'reservation[quantity_adults]', value: @adults, type: 'hidden'}
      %input.form-control.custom_input{value: @adults, disabled: 'disabled'}
  .col-lg-2
    .form-group.form-custom
      %label{:for => "kids"} N° Niños
      %input{name: 'reservation[quantity_kids]', value: @kids, type: 'hidden'}
      %input.form-control.custom_input{value: @kids, disabled: 'disabled'}
