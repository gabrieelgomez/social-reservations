-#%hr
%h3 Resumen
.row
  .col-lg-12
    .reservation-resumen
      %ul.list-group.mb-3.sticky
        -#%li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Responsable
            %small.text-muted Slice Group
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Origen
            %small.text-muted= params[:org_name]
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Destino
            %small.text-muted= params[:arr_name]
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Fecha de Ida
            %small.text-muted 05/09/2018
        //Se debe condicionar ¡Pendiente acá!
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Fecha de Vuelta
            %small.text-muted 10/09/2018
        -#%li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Tipo de Vehiculo
            %small.text-muted= @vehicle.title[@lang].capitalize
        %li.list-group-item.d-flex.justify-content-between.bg-light
          .row
            -# .col-lg-4
            -#   .text-muted
            -#     %h6.my-0 Adultos
            -#     %small= @vehicle.quantity_adults
            -# .col-lg-4
            -#   .text-muted
            -#     %h6.my-0 Niños
            -#     %small= @vehicle.quantity_kids
            .col-lg-12
              .text-muted
                %h6.my-0 Equipaje
                %small
                  = @vehicle.kit['quantity']
                  pzas.
                  (#{@vehicle.kit['weight']}kg) ->
                  = @vehicle.title[@lang]
        -#%li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Tipo de Moneda
            %small.text-muted= @currency.upcase
          -#%span.text-muted $5
        %li.list-group-item.d-flex.justify-content-between
          %div
            //Esto es el concepto (facturación)
            %h6.my-0 Sub-total
            %small.text-muted
              - multiple = params[:round_trip] == 'true' ? '2' : '1'
              - price    = params[:round_trip] == 'true' ? @vehicle.price[@currency].to_f*2 : @vehicle.price[@currency].to_f
              = "#{multiple} x "
              = number_to_currency(@vehicle.price[@currency].to_f, locale: @locale)
              = "="
              = number_to_currency(price, locale: @locale)
        %li.list-group-item.d-flex.justify-content-between
          %div
            %span
              Precio Total
            %strong{style:"float: right;"}
              = @currency.upcase
              = number_to_currency(price, locale: @locale)
          -#(#{@currency.upcase})
          -#%strong= "$ #{@vehicle.price[@currency]}"
        %hr
        .box-btn-payment
          .about-btn.travel-mrt-0{style:"float: right;"}
            %button.about-view.travel-btn{style:"margin-right: 0;"} Confirmar
        //Falta condicionar
        -#.box-btn-payment
          .about-btn.travel-mrt-0
            %button.about-view.travel-btn.btn Pagar
