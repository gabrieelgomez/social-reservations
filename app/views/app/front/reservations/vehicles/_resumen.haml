%h3 Resumen
.row
  .col-lg-12
    .reservation-resumen
      %ul.list-group.mb-3.sticky
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Origen
            %small.text-muted= params[:org_name]
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Destino
            %small.text-muted= params[:arr_name]
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Fecha de Ida
            %small.text-muted= params[:flight_origin_picker]
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Fecha de Vuelta
            %small.text-muted= params[:flight_arrival_picker]
        %li.list-group-item.d-flex.justify-content-between.bg-light
          .row
            .col-lg-12
              .text-muted
                %h6.my-0 Equipaje máximo permitido
                %small
                  = @vehicle.kit['quantity']
                  pzas.
                  (#{@vehicle.kit['weight']}kg) ->
                  = @vehicle.title[@lang]
        %li.list-group-item.d-flex.justify-content-between
          %div
            %h6.my-0 Sub-total
            %small.text-muted
              - multiple = params[:round_trip] == 'true' ? '2' : '1'
              - price    = params[:round_trip] == 'true' ? @vehicle.price[@currency].to_f*2 : @vehicle.price[@currency].to_f
              = "#{multiple} x "
              = number_to_currency(@vehicle.price[@currency].to_f, locale: @locale)
              = "="
              = number_to_currency(price, locale: @locale)
        %li.list-group-item.d-flex.justify-content-between
          %div
            %span
              Precio Total
            %strong{style:"float: right;"}
              = @currency.upcase
              = number_to_currency(price, locale: @locale)
        %hr
        .box-btn-payment
          %span
            %p.text-center.title-reser ¡Paga tu reserva!
            %br/
          %center
            .about-btn.travel-mrt-0
              %button.about-view.travel-btn.btn-reser Confirmar
