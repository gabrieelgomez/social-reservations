.row
  .col-lg-12
    .reservation-resumen
      .sticky
        %h3= t('receptivo.reservation_transfers.title_summary')
        %br/
        %br/
        %ul.list-group.mb-3
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_transfers.origin')
              %small.text-muted= @origin_name
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_transfers.destination')
              %small.text-muted= @arrival_name
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_transfers.origin_date')
              %small.text-muted= @flight_origin_picker
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_transfers.destination_date')
              %small.text-muted= @flight_arrival_picker
          %li.list-group-item.d-flex.justify-content-between.bg-light
            .row
              .col-lg-12
                .text-muted
                  %h6.my-0= t('receptivo.reservation_transfers.baggage_maximum')
                  %small
                    = @vehicle.kit['quantity']
                    = t('receptivo.reservation_transfers.pieces')
                    (#{@vehicle.kit['weight']}kg)
                    = @vehicle.title[@lang]
          - unless params[:cotization] == 'true'
            = render 'app/front/reservations/vehicles/resumen/paid'
          - else
            = render 'app/front/reservations/vehicles/resumen/cotizations'
