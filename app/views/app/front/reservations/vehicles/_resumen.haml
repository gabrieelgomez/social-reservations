.row
  .col-lg-12
    .reservation-resumen
      .sticky
        %h3  Resumen
        %br/
        %br/
        %ul.list-group.mb-3
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Origen
              %small.text-muted= @origin_name
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Destino
              %small.text-muted= @arrival_name
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Fecha de Ida
              %small.text-muted= @flight_origin_picker
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Fecha de Vuelta
              %small.text-muted= @flight_arrival_picker
          %li.list-group-item.d-flex.justify-content-between.bg-light
            .row
              .col-lg-12
                .text-muted
                  %h6.my-0 Equipaje máximo permitido
                  %small
                    = @vehicle.kit['quantity']
                    pzas.
                    (#{@vehicle.kit['weight']}kg) ->
                    = @vehicle.title[@lang]
          %li.list-group-item.d-flex.justify-content-between
            %div
              %h6.my-0 Sub-total
              %small.text-muted
                - multiple = @round_trip == 'true' ? '2' : '1'
                - price    = @round_trip == 'true' ? @vehicle.set_price(@locality, @currency).to_f*2 : @vehicle.set_price(@locality, @currency).to_f
                = "#{multiple} x "
                = number_to_currency(@vehicle.set_price(@locality, @currency).to_f, locale: @locale)
                = "="
                = number_to_currency(price, locale: @locale)
          %li.list-group-item.d-flex.justify-content-between
            %div
              %span
                Precio Total
              %strong{style:"float: right;"}
                = @currency.upcase
                = number_to_currency(price, locale: @locale)
          .box-btn-payment
            %br/
            %span
              %p.text-center.title-reser ¡Paga tu reserva!
            %br/
            %center
              .about-btn.travel-mrt-0
                %button.about-view.travel-btn.btn-reser Confirmar
