-#%hr
%h3 Datos de Reserva
.row
  // Inputs datos de reservas desactivados
  .col-lg-6
    .form-group.form-custom
      %label{:for => "origin_vehicle_booking"} Seleccione Origen
      %input{name: 'reservation[origin]', value: params[:org_name], type: 'hidden'}
      %input{name: 'reservation[origin_location]', value: params[:org_loc], type: 'hidden'}
      %input.google-input.form-control{disabled: 'disabled', value: params[:org_name]}
  .col-lg-6
    .form-group.form-custom
      %label{:for => "arrival_vehicle_booking"} Seleccione Destino
      %input{name: 'reservation[arrival]', value: params[:arr_name], type: 'hidden'}
      %input{name: 'reservation[arrival_location]', value: params[:arr_loc], type: 'hidden'}
      %input.google-input.form-control{disabled: 'disabled', value: params[:arr_name]}
  .col-lg-12
    .row
      .col-lg-4
        .form-group
          %label{:for => "adults"} Cantidad adultos
          %input{name: 'reservation[quantity_adults]', value: params[:adults], type: 'hidden'}
          %input.form-control{value: params[:adults], disabled: 'disabled'}
      .col-lg-4
        .form-group
          %label{:for => "kids"} Cantidad niños
          %input{name: 'reservation[quantity_kids]', value: params[:kids], type: 'hidden'}
          %input.form-control{value: params[:kids], disabled: 'disabled'}
      .col-lg-4
        .form-group
          %label{:for => "kids"} Cantidad de Equipaje
          = f.input :quantity_kit, label: false, placeholder: 'Equipaje', input_html: { min: 1, max: @vehicle.kit['quantity'].to_i }
  // End --- Inputs datos de reservas desactivados


  // Radio Buttons Ida - Vuelta
  .col-lg-12
    .row
      .col-lg-12
        .form-group.form-custom.form-reservation
          %label.title Su selección ha sido
          %input{name: 'reservation[round_trip]', value: params[:round_trip], type: 'hidden'}
          .trip-circle
            .single-trip-circle
              %input#ida_vuelta_form{:name => "radio", :type => "radio"}/
              %label.ida_vuelta_form{:for => "ida_vuelta_form"}
                %span.round-boarder
                  %span.round-boarder1
                Ida y Vuelta
            .single-trip-circle
              %input#solo_ida_form{:name => "radio", :type => "radio"}/
              %label.solo_ida_form{:for => "solo_ida_form"}
                %span.round-boarder
                  %span.round-boarder1
                Ida
    // End -- Radio Buttons Ida - Vuelta


    // Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)

  .col-lg-12
    .row
      .col-lg-6
        .form-group#fecha_origen_ida
          %label{:for => ""}  Fecha Origen
          %input{name: 'reservation[flight_origin]', value: params[:flight_origin_picker], type: 'hidden'}
          %input.form-control.custom-input{name: 'flight_origin_picker', id: 'flight_origin_picker', autocomplete: 'off', disabled: 'disabled', value: params[:flight_origin_picker]}/
      .col-lg-6
        .form-group#fecha_destino_vuelta
          %label{:for => ""} Fecha Destino
          %input{name: 'reservation[flight_arrival]', value: params[:flight_arrival_picker], type: 'hidden'}
          %input.form-control.custom-input{name: 'flight_arrival_picker', id: 'flight_arrival_picker', autocomplete: 'off', disabled: 'disabled', value: params[:flight_arrival_picker]}/
    // End -- Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)



  .col-lg-12
    .row
      // Checkbox Traslado al/desde Aeropuerto
      .col-lg-12
        .col-lg-12.desde_el_aero
          .checkbox
            %label
              %input.check_vehicle#vehicle_origin{name: 'vehicle_origin', :type => "checkbox", :value => ''} ¿Traslado desde el aeropuerto?
          // End --- Checkbox Traslado al/desde Aeropuerto
          // Inputs informacion de vuelo aeropuerto
        .row
          .col-lg-6.desde_aero_inputs
            .form-group
              %label.title{:for => ""}  Aerolinea
              %input.form-control.custom-input{placeholder: 'Aerolínea', name: 'reservation[airline_origin]', id: 'flight_origin', autocomplete: 'off'}

          .col-lg-6.desde_aero_inputs
            .form-group
              %label.title{:for => ""}  N° de Vuelo
              %input.form-control.custom-input{placeholder: 'N° Vuelo', name: 'reservation[flight_number_origin]', id: 'flight_number', autocomplete: 'off'}/

      .col-lg-12
        .col-lg-12.al_aero
          .checkbox
            %label
              %input.check_vehicle#vehicle_arrival{name: 'vehicle_arrival', :type => "checkbox", :value => ''} ¿Traslado al aeropuerto?

        .col-lg-6.al_aero_inputs
          .form-group
            %label.title{:for => ""}  Aerolinea
            %input.form-control.custom-input{placeholder: 'Aerolínea', name: 'reservation[airline_arrival]', id: 'flight_origin', autocomplete: 'off'}

        .col-lg-6.al_aero_inputs
          .form-group
            %label.title{:for => ""}  N° de Vuelo
            %input.form-control.custom-input{placeholder: 'N° Vuelo', name: 'reservation[flight_number_arrival]', id: 'flight_number', autocomplete: 'off'}/

  .col-lg-12
    .row
      .col-lg-12
        .form-group
          %label.title{:for => ""}  Detalles del Traslados (Observaciones)
          %textarea{placeholder: 'Introduce tus observaciones del traslado y más detalles que nos quieras acotar', :id => "", :name => "reservation[description]", :rows => "4", style:"width: 100%;"}
    // End --- Inputs informacion de vuelo aeropuerto

:javascript
  var round_trip = #{raw params[:round_trip]};
  $('.desde_aero_inputs').hide();
  $('.al_aero_inputs').hide();

  if (round_trip == false){
    $("#solo_ida_form").prop('checked', true);
    $("#ida_vuelta_form").prop('disabled', 'disabled');
    $('#fecha_destino_vuelta').hide();
    $(".al_aero").hide();
    $(".ida_vuelta_form").css('text-decoration','line-through');
  }
  else{
    $("#ida_vuelta_form").prop('checked', true);
    $("#solo_ida_form").prop('disabled', 'disabled');
    // $(".desde_el_aero").hide();
    $(".solo_ida_form").css('text-decoration','line-through')
  }

  $('#vehicle_origin').on( 'click', function() {
    if($(this).is(':checked')){
      $('.desde_aero_inputs').show();
     }
     else{
      $('.desde_aero_inputs').hide();
      }
  });


  $('#vehicle_arrival').on( 'click', function() {
    if($(this).is(':checked')){
      $('.al_aero_inputs').show();
     }
     else{
      $('.al_aero_inputs').hide();
      }
  });
