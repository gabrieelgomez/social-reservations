%h3#travellers_form Datos del Viajero
- @seats.times do |i|
  .row
    .col-lg-6
      .form-custom
      .form-group
        %label{for: "name"} Nombre
        %input#name.form-control{name: 'travellers[][name]', type: "text", placeholder: "Ingrese nombre"}/
    .col-lg-6
      .form-custom
      .form-group
        %label{for: "dni"} Identificación
        %input#dni.form-control{name: 'travellers[][dni]', type: "text", placeholder: "Ingrese identificación"}/
