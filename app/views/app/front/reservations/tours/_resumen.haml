.row
  .col-lg-12
    .reservation-resumen
      .sticky
        %h3  Resumen
        %br/
        %br/
        %ul.list-group.list-summary.mb-3
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Tour
              %small.text-muted= @tour.title[@lang].titleize
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Fecha de Reserva
              %small.text-muted= @flight_origin_tour_picker

          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Adultos - Niños
              %small.text-muted= "#{@adults} - #{@kids}"

          - if current_user.try(:has_role_agentable?)
            %li.list-group-item.d-flex.justify-content-between
              %div
                %h6.my-0 Sub-total
                %small.text-muted
                  = number_to_currency(@tour.price_adults[@currency], locale: @locale)
                  (Adultos) x
                  = @adults
                  = "="
                  = number_to_currency(@total_adults, locale: @locale)

                - if @kids.positive?
                  %br
                  %small.text-muted
                    // Precio de Niños
                    = number_to_currency(@tour.calculate_kids(@currency), locale: @locale)
                    (Niños) x
                    = @kids
                    = "="
                    = number_to_currency(@total_kids, locale: @locale)

                  %br
                  %small.text-muted= "Total #{@seats} personas"

            %li.list-group-item.d-flex.justify-content-between
              %div
                %span
                  Porcentaje de Comisión
                %strong{style:"float: right;"}
                  = "#{@comission}% = "
                  = number_to_currency(@price_comission, locale: @locale)

            %li.list-group-item.d-flex.justify-content-between
              %div
                %span
                  Porcentaje de Prestación
                %strong{style:"float: right;"}
                  = "#{@lending}% = "
                  = number_to_currency(@price_lending, locale: @locale)

            %li.list-group-item.d-flex.justify-content-between
              %div
                %span
                  Precio Total Agencia
                %strong{style:"float: right;"}
                  = @currency.upcase
                  = number_to_currency(@price_total_agency, locale: @locale)

            %li.list-group-item.d-flex.justify-content-between
              %div
                %span
                  Precio Total PAX
                %strong{style:"float: right;"}
                  = @currency.upcase
                  = number_to_currency(@price_total, locale: @locale)

            .box-btn-payment
              %br/
              %span
                %p.text-center.title-reser ¡Confirma tu reserva!
              %br/
              %center
                .about-btn.travel-mrt-0
                  %button.about-view.travel-btn.btn-reser Siguiente

          - else

            %li.list-group-item.d-flex.justify-content-between
              %div
                %h6.my-0 Sub-total
                %small.text-muted
                  // Precio de Adultos
                  = number_to_currency(@tour.price_adults[@currency], locale: @locale)
                  (Adultos) x
                  = @adults
                  = "="
                  = number_to_currency(@total_adults, locale: @locale)

                - if @kids.positive?
                  %br
                  %small.text-muted
                    // Precio de Niños
                    = number_to_currency(@tour.calculate_kids(@currency), locale: @locale)
                    (Niños) x
                    = @kids
                    = "="
                    = number_to_currency(@total_kids, locale: @locale)

                  %br
                  %small.text-muted= "Total #{@seats} personas"
            %li.list-group-item.d-flex.justify-content-between
              %div
                %span
                  Precio Total
                %strong{style:"float: right;"}
                  = @currency.upcase
                  = number_to_currency(@price_total, locale: @locale)
            .box-btn-payment
              %br/
              %span
                %p.text-center.title-reser ¡Paga tu reserva!
              %br/
              %center
                .about-btn.travel-mrt-0
                  %button.about-view.travel-btn.btn-reser Confirmar
