%h3= t('receptivo.reservation_transfers.title_privacy_policy')
.row
  .col-lg-12
    .separator__mobile.hidden-lg
    .form-group.form-custom
      .checkbox.checkbox-blue.checkbox-inline
        %input#privacy_policy.styled{name: 'privacy_policy', :type => "checkbox", :value => "agree"}/
        %label.check{:for => "privacy_policy"}
          = t('receptivo.reservation_transfers.i_agree')
          = succeed "." do
            = link_to t('receptivo.reservation_transfers.privacy_policy') , '#' , :class => '', :id => 'js_privacyPolicy', :type => 'button'

            