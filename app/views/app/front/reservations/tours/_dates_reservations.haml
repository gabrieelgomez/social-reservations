%h3= t('receptivo.reservation_tours.title_dates_reservation')
.row
  .col-lg-3
    .form-group.form-custom
      %label{:for => "origin_tour_booking"}= t('receptivo.reservation_tours.tours')
      %input{name: 'reservation[origin]', value: @tour.title[@lang].titleize, type: 'hidden'}
      %input.google-input.form-control{disabled: 'disabled', value: @tour.title[@lang].titleize}
  .col-lg-3
    // Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
    .form-group.form-custom#fecha_origen_ida
      %label{:for => ""}= t('receptivo.reservation_tours.tours_date')
      %input{name: 'reservation[flight_origin]', value: @flight_origin_tour_picker, type: 'hidden'}
      %input.form-control.custom-input{name: 'flight_origin_tour_picker', id: 'flight_origin_tour_picker', autocomplete: 'off', disabled: 'disabled', value: @flight_origin_tour_picker}/
    // End -- Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
  .col-lg-3
    .form-group.form-custom 
      %label{:for => "adults"}= t('receptivo.reservation_tours.adult_amount')
      %input{name: 'reservation[quantity_adults]', value: @adults, type: 'hidden'}
      %input.form-control{value: @adults, disabled: 'disabled'}
  .col-lg-3
    .form-group.form-custom
      %label{:for => "kids"}= t('receptivo.reservation_tours.children_amount')
      %input{name: 'reservation[quantity_kids]', value: @kids, type: 'hidden'}
      %input.form-control{value: @kids, disabled: 'disabled'}
