-#%hr
%h3 Datos de Reserva
.row
  .col-lg-4
    .form-group.form-custom
      %label{:for => "origin_circuit_booking"} Seleccione Origen
      %input{name: 'reservation[origin]', value: @circuit.title[@lang].titleize, type: 'hidden'}
      %input.google-input.form-control{disabled: 'disabled', value: @circuit.title[@lang].titleize}
  .col-lg-4
    // Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
    .form-group.form-custom#fecha_origen_ida
      %label{:for => ""}  Fecha Origen
      %input{name: 'reservation[flight_origin]', value: @flight_origin_circuit_picker, type: 'hidden'}
      %input.form-control.custom-input{name: 'flight_origin_circuit_picker', id: 'flight_origin_circuit_picker', autocomplete: 'off', disabled: 'disabled', value: @flight_origin_circuit_picker}/
    // End -- Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
  .col-lg-2
    .form-group.form-custom
      %label{:for => "adults"} N° Adultos
      %input{name: 'reservation[quantity_adults]', value: @adults, type: 'hidden'}
      %input.form-control{value: @adults, disabled: 'disabled'}
  .col-lg-2
    .form-group.form-custom
      %label{:for => "kids"} N° Niños
      %input{name: 'reservation[quantity_kids]', value: @kids, type: 'hidden'}
      %input.form-control{value: @kids, disabled: 'disabled'}
