-#%hr
%h3 Datos de Reserva
.row
  .col-lg-4
    .form-group.form-custom
      %label{:for => "origin_circuit_booking"} Seleccione Origen
      %input{name: 'reservation[origin]', value: @circuit.title[@lang].titleize, type: 'hidden'}
      %input.google-input.form-control{disabled: 'disabled', value: @circuit.title[@lang].titleize}
  .col-lg-4
    // Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
    .form-group.form-custom#fecha_origen_ida
      %label{:for => ""}  Fecha Viaje
      %input{name: 'reservation[flight_origin]', value: @flight_origin_circuit_picker, type: 'hidden'}
      %input.form-control.custom-input{name: 'flight_origin_circuit_picker', id: 'flight_origin_circuit_picker', autocomplete: 'off', disabled: 'disabled', value: @flight_origin_circuit_picker}/
    // End -- Inputs Datepicker Fecha Origen (Ida) - Fecha Destino (Vuelta)
  .col-lg-2
    .form-group.form-custom
      %label{:for => "adults"} N° Adultos
      %input{name: 'reservation[quantity_adults]', value: @adults, type: 'hidden'}
      %input.form-control{value: @adults, disabled: 'disabled'}
  .col-lg-2
    .form-group.form-custom
      %label{:for => "kids"} N° Niños
      %input{name: 'reservation[quantity_kids]', value: @kids, type: 'hidden'}
      %input.form-control{value: @kids, disabled: 'disabled'}
  .col-lg-6
    .form-group.form-custom
      %label{for: "name"} Nombre del Cotizante
      %input.form-control{name: '', type: "text", placeholder: "Ingrese nombre"}/
  .col-lg-3
    .form-group.form-custom
      %label{for: ""} Seleccioe un Hotel
      %select#sel1.form-control
        %option Item 1
        %option Item 2
        %option Item 3
        %option Item 4
  .col-lg-3
    .form-group.form-custom
      %label{for: ""} Tipo de Habitación
      %select#sel1.form-control
        %option Item 1
        %option Item 2
        %option Item 3
        %option Item 4

      -#%select.selectpicker.form-control.accommodation{"data-style" => "btn-primary", id: 'js-accommodation', name: 'tour[destination_ids]', multiple: "multiple"}
        %option Item 1
        %option Item 2
        %option Item 3
        %option Item 4

  .col-lg-12
    .form-group.form-custom
      %label{for: ""} Observaciones/Solicitudes
      %textarea{placeholder: 'Observaciones/Solicitudes', id: "", name: "invoice[][address]", rows: "4", style:"width: 100%;"}


%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css", :rel => "stylesheet"}/
%script{:src => "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js"}

js-accommodation
:javascript
  $( ":button#js-accommodation" ).removeClass( "btn-primary" );