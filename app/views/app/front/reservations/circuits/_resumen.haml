.row
  .col-lg-12
    .reservation-resumen
      .sticky
        %h3= t('receptivo.reservation_circuits.title_summary')
        %br/
        %br/
        %ul.list-group.list-summary.mb-3
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_circuits.name')
              %small.text-muted= @circuit.title[@lang].titleize
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_circuits.travel_date')
              %small.text-muted= @flight_origin_circuit_picker

          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_circuits.adult_amount')
              %small.text-muted= @adults

          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0= t('receptivo.reservation_circuits.children_amount')
              %small.text-muted= @kids

          %li.list-group-item.d-flex.justify-content-between
            %div
              %h6.my-0= t('receptivo.reservation_circuits.subtotal')
              %ul.list_price
                %li
                  %small.text-muted#price_single -Hab. single (0) x $ 0.0 = $ 0.0
                %li
                  %small.text-muted#price_doubles -Hab. doubles (0) x $ 0.0 = $ 0.0
                %li
                  %small.text-muted#price_triples -Hab. triples (0)  x $ 0.0 = $ 0.0
                %li
                  %small.text-muted#price_quadruples -Hab. quadruples (0) x $ 0.0 = $ 0.0
                %li
                  %small.text-muted#price_quintuples -Hab. quintuples (0) x $ 0.0 = $ 0.0
                %li
                %small.text-muted#price_sextuples -Hab. sextuples (0)  x $ 0.0 = $ 0.0
                - if @kids.positive?
                  %li
                    %small.text-muted#price_children= "-Cant. Ni√±os (#{@kids}) x $ 0.0 = $ 0.0"
                %li
                  %small.text-muted= "-Total #{@seats} personas"
          %li.list-group-item.d-flex.justify-content-between
            %div
              %span= t('receptivo.reservation_circuits.total_price')
              %strong#price_total{style:"float: right; color:#4e4e56;"}
                = @currency.upcase
                = number_to_currency(0, locale: @locale)
        .box-btn-payment
          %br/
          %span
            %p.text-center.title-reser= t('receptivo.reservation_circuits.quote_your_reservation')
          %br/
          %center
            .about-btn.travel-mrt-0
              %button.about-view.travel-btn.btn-reser= t('receptivo.reservation_circuits.quote')
