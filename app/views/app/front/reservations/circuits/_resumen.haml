.row
  .col-lg-12
    .reservation-resumen
      .sticky
        %h3 Resumen
        %ul.list-group.list-summary.mb-3
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Circuito
              %small.text-muted= @circuit.title[@lang].titleize
          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Fecha de Viaje
              %small.text-muted= params[:flight_origin_circuit_picker]

          %li.list-group-item.d-flex.justify-content-between.lh-condensed
            %div
              %h6.my-0 Adultos - Niños
              %small.text-muted= "#{@adults} - #{@kids}"

          %li.list-group-item.d-flex.justify-content-between
            %div
              %h6.my-0 Sub-total
              -# %small.text-muted 2 x $ 1.000,00 = $ 2.000,00
              %small.text-muted#precio_adulto
                // Precio de Adultos
                = number_to_currency(0, locale: @locale)
                (Adultos) x
                = @adults
                = "="
                = number_to_currency(0, locale: @locale)

              - if @kids.positive?
                %br
                %small.text-muted#precio_nino
                  = number_to_currency(0, locale: @locale)
                  (Niños) x
                  = @kids
                  = "="
                  = number_to_currency(0, locale: @locale)

                %br
                %small.text-muted= "Total #{@seats} personas"
          %li.list-group-item.d-flex.justify-content-between
            %div
              %span
                Precio Total
              %strong#precio_total{style:"float: right; color:#4e4e56;"}
                = @currency.upcase
                = number_to_currency(0, locale: @locale)
        .box-btn-payment
          %span
            -# %p.text-center.title-reser ¡Paga tu reserva!
            -# %br/
          %center
            .about-btn.travel-mrt-0
              %button.about-view.travel-btn.btn-reser Cotizar

:javascript
  var adults = #{raw @adults};
  var kids   = #{raw @kids};

  $('input.js-square').on('change', function(){
    precio_adults = room_json[$(this).attr('id')];
    precio_kids   = room_json['children']
    total_adults  = adults * precio_adults;
    total_kids    = kids * precio_kids;
    total         = total_adults + total_kids;
    $('#precio_adulto').text(`$ ${precio_adults} (Adultos) x ${adults} = ${total_adults}`);
    $('#precio_nino').text(`$ ${precio_kids} (Adultos) x ${kids} = ${total_kids}`);
    $('#precio_total').text('$ ' + total);
  });

