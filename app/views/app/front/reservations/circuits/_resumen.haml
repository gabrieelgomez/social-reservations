%h3 Resumen
.row
  .col-lg-12
    .reservation-resumen
      %ul.list-group.mb-3.sticky
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Circuito
            %small.text-muted= @circuit.title[@lang].titleize
        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Fecha de Reserva
            %small.text-muted= params[:flight_origin_circuit_picker]

        %li.list-group-item.d-flex.justify-content-between.lh-condensed
          %div
            %h6.my-0 Adultos - Niños
            %small.text-muted= "#{@adults} - #{@kids}"

        %li.list-group-item.d-flex.justify-content-between
          %div
            %h6.my-0 Sub-total
            -# %small.text-muted 2 x $ 1.000,00 = $ 2.000,00
            %small.text-muted
              // Precio de Adultos
              = number_to_currency(1000, locale: @locale)
              (Adultos) x
              = @adults
              = "="
              = number_to_currency(2000, locale: @locale)

            - if @kids.positive?
              %br
              %small.text-muted
                // Precio de Niños
                = number_to_currency(500, locale: @locale)
                (Niños) x
                = @kids
                = "="
                = number_to_currency(1000, locale: @locale)

              %br
              %small.text-muted= "Total #{@seats} personas"
        %li.list-group-item.d-flex.justify-content-between
          %div
            %span
              Precio Total
            %strong{style:"float: right;"}
              = @currency.upcase
              = number_to_currency(3000, locale: @locale)
        %hr
        .box-btn-payment
          %span
            %p.text-center.title-reser ¡Paga tu reserva!
            %br/
          %center
            .about-btn.travel-mrt-0
              %button.about-view.travel-btn.btn-reser Confirmar
