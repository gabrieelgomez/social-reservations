-#%hr
%h3 Alojamiento
.row
  .col-lg-12
    .box-hotel-room
      %h4 Hoteles disponibles
  - @circuit.circuitables.each do |circuitable|
    - if circuitable.status
      .col-lg-6
        .row
          .col-lg-12.js-hotel
            .row.row-flex
              .col-lg-4
                %label.btn.btn-hotel
                  %center
                    .icon-hotel{style: "background-image: url(/assets/img/hotel.svg)"}
                      %input.room.js-hotelRoom{name: "lodgment_circuitable", type: "checkbox", value: circuitable.lodgment_id}/
              .col-lg-8
                %p.title-hotel= circuitable.lodgment.title[@lang]
                %p
                  = link_to 'Ver más información', '#' , class: 'js_detailsHotel', id: 'js_detailsHotel', type: 'button'
                  -#%a{"data-toggle" => "modal", :href => "#modalDetailsHotel", type: 'button'} Ver más información
                  -#%button.btn.btn-info.btn-lg{"data-target" => "#modalDetailsHotel", "data-toggle" => "modal", :type => "button"} Open Modal
                  -#%input.btn.btn-success{"data-target" => "#modalDetailsHotel", "data-toggle" => "modal", :type => "button", :value => "Upload"}/


