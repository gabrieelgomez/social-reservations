-#%hr
%h3 Alojamiento
.row
  .col-lg-12
    .box-hotel-room
      %h4 Alojamientos disponibles - Seleccione una opción 
    .set_room
      .row
        - @circuit.circuitables.each do |circuitable|
          - if circuitable.status
            .col-lg-4
              .row
                .col-lg-12.js-hotel
                  .row
                    .box_hotel.row-flex
                      .col-lg-7
                        %label.btn.btn-hotel
                          %center
                            .icon-hotel{style: "background-image: url(/assets/img/hotel_star_b.svg)"}
                              %input.room.js-hotelRoom{name: "ranking_circuitable", type: "checkbox", value: circuitable.ranking_id}/
                      .col-lg-5
                        %p.title-hotel= circuitable.ranking.title[@lang]
                        -# %p
                        -#   = link_to 'Ver más información', '#' , class: 'js_detailsHotel', id: "modal_id_#{circuitable.id}", type: 'button'

.box_type_rooms.room-hidden.room-disabled
  .row
    .col-lg-12
      .box-type-room
        %h4 Tipo de Habitación
    .col-lg-2
      %label.btn.btn-room
        %center
          .icon-room{style: "background-image: url(/assets/img/type-rooms/1.svg)"}
            %input.type-room.js-typeRoom{name: 'room_single', type: "checkbox"}/
          %p Habitación
          %p Simple
          %p.price#room_single
        .quantity-type-room.js-quantityRoom.quantity-disabled
