%html.no-js{:lang => "en"}
  %head
    = render 'app/layouts/head'
  %body
    .loader
      .loader__box
        .box_spinner
          = render 'app/front/loader_isotype'
          .animation  
            = render 'app/front/loader_svg'
      .loader__notify
      .loader__info
        = render 'app/front/form_payment'
        -#%h4 Espere, mientra lo rediccionamos a la plataforma de pago...


:javascript
  // Form submit function.
  function submitform(){
    console.log('Submit form')
    document.getElementById("form1").submit();
  }

  submitform();

  $(window).load(function () {
    setTimeout(function () {
      $('.loader').fadeOut(500, function () {
        $(this).remove();
      });
    }, 1000);
  });


