!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      @import url("https://fonts.googleapis.com/css?family=Poppins:400,500,700");
      @import url("https://fonts.googleapis.com/css?family=Noto+Sans|Poppins:400,500,700");
      * {
        margin: 0;
        padding: 0;
        border: 0;
      }

      *:not(br):not(tr):not(html) {
        font-family: "Noto Sans", sans-serif;
        box-sizing: border-box;
      }

      body {
        width: 100% !important;
        height: 100%;
        margin: 0;
        line-height: 1.4;
        background-color: #f2f4f6;
        color: #74787e;
        -webkit-text-size-adjust: none;
        font-family: "Poppins", sans-serif;
      }

      p,
      ul,
      ol,
      blockquote {
        line-height: 1.4;
        text-align: left;
      }

      a {
        color: #3869d4;
      }

      a img {
        border: none;
      }

      td {
        word-break: break-word;
      }

      /* Layout ------------------------------ */
      .email-wrapper {
        width: 100%;
        margin: 0;
        padding: 0;
        -premailer-width: 100%;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
        background-color: #585858;
      }

      .email-content {
        width: 100%;
        margin: 0;
        padding: 0;
        -premailer-width: 100%;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
      }

      /* Masthead ----------------------- */
      .email-masthead {
        padding: 25px 0;
        text-align: center;
        background-color: #4e4e56;
      }

      .email-masthead img {
        height: 25%;
      }

      .email-masthead_logo {
        width: 94px;
      }

      .email-masthead_name {
        font-size: 16px;
        font-weight: bold;
        color: #bbbfc3;
        text-decoration: none;
        text-shadow: 0 1px 0 white;
      }

      /* Body ------------------------------ */
      .email-body {
        width: 100%;
        margin: 0;
        padding: 0;
        -premailer-width: 100%;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
        border-top: 1px solid #edeff2;
        border-bottom: 1px solid #edeff2;
        background-color: #ffffff;
      }

      .email-body_inner {
        width: 600px;
        margin: 0 auto;
        padding: 0;
        -premailer-width: 570px;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
        background-color: #ffffff;
      }

      .email-footer {
        width: 570px;
        margin: 0 auto;
        padding: 0;
        -premailer-width: 570px;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
        text-align: center;
      }

      .email-footer p {
        color: #fff;
      }

      .body-action {
        width: 100%;
        margin: 30px auto;
        padding: 0;
        -premailer-width: 100%;
        -premailer-cellpadding: 0;
        -premailer-cellspacing: 0;
        text-align: center;
      }

      .body-sub {
        margin-top: 25px;
        padding-top: 25px;
        border-top: 1px solid #edeff2;
      }

      .content-cell {
        padding: 35px;
      }

      /* Attribute list ------------------------------ */
      .attributes {
        margin: 0 0 21px;
      }

      .attributes_content {
        background-color: #fff;
        padding: 16px;
      }

      .attributes_item {
        padding: 0;
        line-height: 28px;
      }

      .attributes_item strong {
        color: #2f3133;
      }

      .attributes_item img {
        margin-top: 20px;
        width: 100%;
      }

      #company {
        color: white;
        text-decoration: none !important;
      }

      /* Utilities ------------------------------ */
      .align-right {
        text-align: right;
      }

      .align-left {
        text-align: left;
      }

      .align-center {
        text-align: center;
      }

      /*Media Queries ------------------------------ */
      @media only screen and (max-width: 600px) {
        .email-body_inner,
        .email-footer {
          width: 100% !important;
        }
      }

      @media only screen and (max-width: 500px) {
        .button {
          width: 100% !important;
        }
      }

      @media only screen and (max-width: 767px) {
        .email-masthead img {
          width: 30%;
        }
      }

      /* Type ------------------------------ */
      h1 {
        margin-top: 0;
        color: #43b7e8;
        font-size: 19px;
        font-weight: bold;
        text-align: center;
      }

      h2 {
        margin-top: 0;
        color: #2f3133;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
      }

      h3 {
        margin-top: 0;
        color: #2f3133;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
      }

      p {
        margin-top: 0;
        color: #74787e;
        font-size: 16px;
        line-height: 1.5em;
        text-align: center;
      }

      p.sub {
        font-size: 13px;
      }

      p.center {
        text-align: center;
      }
  %body{:style => "background-color:#fff;"}
    %table{:style => "max-width:670px;margin:50px auto 10px;background-color:#8080800f;padding:50px;-webkit-border-radius:3px;-moz-border-radius:3px;border-radius:3px;-webkit-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);-moz-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); border-top: solid 10px #43b7e8;border-bottom: solid 10px #43b7e8;box-shadow: 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12);"}
      %thead
        %tr
          %th{:style => "text-align:left;"}
            %img{:alt => "receptivo colombia", :src => "https://i.ibb.co/wgcHVTt/receptivo-colombia.png", :style => "max-width: 150px;"}/
          %th{:style => "text-align:right;font-weight:400;"}= Date.today
      %tbody
        %tr
          %td{:style => "height:35px;"}
        %tr
          %td{:colspan => "2", :style => "border: solid 1px #ddd; padding:10px 20px;"}
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= " #{t('receptivo.reservation_mailer.user_notification')} #{t("keppler.messages.#{@reservation.order.status}").downcase} "
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.cottant_name')
              = @reservation.owner
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.order_number')
              = @reservation.id.blank? ? '-----------' : @reservation.id
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.bill_number')
              = @reservation.invoice.token.blank? ? '-----------' : @reservation.invoice.token

            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.reservation_cost')
              - unless @reservation.order.price_total_pax.to_f.zero?
                ="#{@reservation.invoice.currency.upcase} #{number_to_currency(@reservation.order.price_total_pax, locale: @locale) }"
              - else
                Por cotizar

            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.type_money')
              = @reservation.invoice.currency.upcase.blank? ? '-----------' : @reservation.invoice.currency.upcase
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.payment_platform')
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:150px"}= t('receptivo.reservation_mailer.order_status')
              - if @reservation.order.status == 'payment_link'
                %b{:style => "margin:0;color: white;background-color:green;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status}")

              - elsif @reservation.order.status == 'credit_agency'
                %b{:style => "margin:0;color: white;background-color:green;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status}")

              - elsif @reservation.order.status == 'cancelled'
                %b{:style => "margin:0;color: white;background-color:red;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status}")
            - if @reservation.order.status == 'payment_link' && @reservation.order.status_pay == 'pending'
              %p{:style => "font-size:14px;margin:0 0 6px 0;"}
                %span{:style => "font-weight:bold;display:inline-block;min-width:146px"}= t('receptivo.reservation_mailer.payment_link')
                %a{href: @reservation.url_payment, target: '_blank'}= t('receptivo.reservation_mailer.go_to_link')
            %p{:style => "font-size:14px;margin:0 0 6px 0;"}
              %span{:style => "font-weight:bold;display:inline-block;min-width:150px"}= t('receptivo.reservation_mailer.payment_status')
              - if @reservation.order.status_pay == 'pending'
                %b{:style => "margin:0;color: white;background-color:#f39c12;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status_pay}")

              - elsif @reservation.order.status_pay == 'approved'
                %b{:style => "margin:0;color: white;background-color:green;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status_pay}")

              - elsif @reservation.order.status_pay == 'cancelled'
                %b{:style => "margin:0;color: white;background-color:red;padding:4px;border-radius:5px;font-weight:bold;"}= t("keppler.messages.#{@reservation.order.status_pay}")

        %tfooter
          %tr
            %td{:colspan => "2", :style => "font-size:12px;padding:10px 15px 0 15px;"}
              %p= t('receptivo.reservation_mailer.notification')
              %br/
              %p{:style => "font-size:12px"}
                %strong= t('receptivo.reservation_mailer.greeting')
          %tr
            %td{:colspan => "2", :style => ""}
              %table.email-footer{:align => "center", :cellpadding => "0", :cellspacing => "0", :width => "570"}
                %tr
                  %td.content-cell{:align => "center"}
                    %p.sub.align-center{:style => "color: #4e4e56"}= t('receptivo.reservation_mailer.firm')
                    %p.sub.align-center{:style => "color: #4e4e56"}
                      = t('receptivo.reservation_mailer.developed_by')
                      %a#company{:href => "http://slicegroup.xyz"}
                        %strong{:style => "color: #4e4e56"} Slice Group
