            .toolbar-item
              %a.tool-btn{href: @setting_sheetsu.sheetsu_spreadsheet_tours, target: '_blank'}
                %h6 Ir a Google Spreadsheets

            .toolbar-item
              %a.tool-btn{href: @setting_sheetsu.sheetsu_url_tours, target: '_blank'}
                %h6 Ver API URL

          -# .hide
