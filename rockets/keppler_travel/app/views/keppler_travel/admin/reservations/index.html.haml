:javascript
  $(document).ready(function(){
    $('#reservation').click(function() {
      $('#upload_file_reservation').click()
      $('#upload_file_reservation').change(function() {
        $('.waiting').css('display', 'block')
        $('#upload_form_reservation').submit()
      })
    });

    renderImg();
  });
