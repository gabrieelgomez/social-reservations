- objects.each do |driver|
  %tr{ id: "row-#{driver.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if can?(KepplerTravel::Driver).destroy_multiple?
        .checkbox
          %label{ for: "checkbox-#{driver.id}" }
            %input{ type:"checkbox", id: "checkbox-#{driver.id}", 'checklist-model' => 'check', 'checklist-value' => "#{driver.id}", '@click' => "listDelete(#{driver.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok

    -# %td.hidden-xs
    -#   = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
    -#     - if driver.orders.map(&:status).count('pending').positive?
    -#       %span.status.not-available Ocupado
    -#     - else
    -#       %span.status.available Disponible

    %td
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          =  image_tag driver.user.try(:avatar).try(:url), width: 50, height: 50, style: 'object-fit: cover;', class:'img-circle'

    %td.hidden-xs
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          = driver.destination.custom_title['es']

    %td.hidden-xs
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          = driver.user.name

    %td.hidden-xs
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          = driver.user.email

    %td.hidden-xs
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          = driver.user.dni

    %td.hidden-xs
      = link_to admin_travel_driver_path(driver, search: @query), remote: true, class: 'show-row' do
        %span
          = driver.user.phone

    %td.hidden-xs.hidden-sm
      = link_to admin_travel_driver_description_tables_path(driver.id), class: 'show-row' do
        %i.icon-eye
        -# = t('keppler.actions.show')

    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{driver.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{driver.id}" }
        - if can?(KepplerTravel::Driver).index?
          %li
            = link_to admin_travel_driver_path(driver), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if can?(KepplerTravel::Driver).update?
          %li
            = link_to edit_admin_travel_driver_path(driver), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        -# - if can?(KepplerTravel::Driver).clone?
          %li
            = link_to admin_travel_driver_clone_path(driver), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if can?(KepplerTravel::Driver).destroy?
          %li
            = link_to admin_travel_driver_path(driver), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    -# %td{:style => 'width: 5%;'}
    -#   %a.drop{:href=>"#"}
    -#     %i.icon-cursor-move
