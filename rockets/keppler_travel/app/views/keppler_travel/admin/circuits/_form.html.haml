  collectImages("#circuit_files", ".edit_circuit", "circuit[files_delete][]");

- if action_name == 'new'
  :javascript
    validateCircuit('#new_circuit');
- else
  :javascript
    var circuit_id = #{raw @circuit.id};
    validateCircuit(`#edit_circuit_${circuit_id}`);

