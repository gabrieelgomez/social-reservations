= simple_form_for [:admin, :travel, @circuit] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_travel_circuits_path, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t("keppler.modules.#{action_name.underscore}")
            .box-tools.pull-right
              %a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
                %i.fa.fa-minus
          .box-body
            .col-12
              .card
                .card-header
                  %h3.card-title Alojamientos / Habitaciones
                .card-body.table-responsive.p-0
                  %table.table.table-hover
                    %tr
                      %th ¿Habilitado?
                      %th Destino
                      %th Alojamiento
                      %th Simple
                      %th Niños
                      %th Dobles
                      %th Triples
                      %th Cuadruples
                      %th Quintuples
                      %th Sextuples
                    - @circuit.destinations.each do |destination|
                      - destination.lodgments.each do |lodgment|
                        %tr
                          %td Check
                          %td= destination.custom_title
                          %td= lodgment.title['es']
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('1'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('2'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('3'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('4'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('5'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('6'), type: 'number', min: 1, style: 'width:85%'}
                          %td
                            %input{name: 'type_room', disabled: lodgment.disabled_room('7'), type: 'number', min: 1, style: 'width:85%'}

                .form-padding
                  .col-xs-12
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'

